var iconBars = file base64 'img/bars.svg'
var tools = [
  file base64 'img/pencil.svg',
  file base64 'img/eraser.svg',
  file base64 'img/line.svg',
  file base64 'img/circle.svg',
  file base64 'img/square.svg',
